<Window x:Class="JeuDeLaVie.View.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JeuDeLaVie.View"
        xmlns:vm="clr-namespace:JeuDeLaVie.ViewModel"
        d:DataContext="{d:DesignInstance vm:VM_Game}"
        mc:Ignorable="d"
        Title="Test" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Formes}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="X" Binding="{Binding Coord.Col}"/>
                <DataGridTextColumn Header="Y" Binding="{Binding Coord.Row}"/>
                <DataGridTextColumn Header="IsAlive" Binding="{Binding IsAlive}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
